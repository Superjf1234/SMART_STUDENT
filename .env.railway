# Railway Environment Variables para SMART_STUDENT
# CONFIGURACIÓN CORREGIDA para evitar problemas de directorio

# Node.js optimizations - MEMORIA LIMITADA
NODE_OPTIONS=--max-old-space-size=256
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development

# FORZAR modo desarrollo en Reflex (corregido)
REFLEX_ENV=dev

# CRÍTICO: Python path para encontrar módulos
PYTHONPATH=/app:/app/mi_app_estudio

# IMPORTANTE: Agregar estas variables en Railway Dashboard:
# 1. REFLEX_ENV = dev
# 2. PYTHONPATH = /app:/app/mi_app_estudio
# 3. NODE_OPTIONS = --max-old-space-size=256

# Python path para importaciones
PYTHONPATH=/app:/app/mi_app_estudio

# Desactivar funciones que usan mucha memoria
DEBUG=False

# Configuración específica para evitar builds pesados
SKIP_BUILD_OPTIMIZATION=true
DISABLE_TELEMETRY=1
