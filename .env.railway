# Railway Environment Variables para SMART_STUDENT
# Configuración ULTRA-AGRESIVA para prevenir SIGBUS

# Node.js optimizations - MEMORIA MUY LIMITADA
NODE_OPTIONS=--max-old-space-size=256
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development

# FORZAR modo desarrollo en Reflex
REFLEX_ENV=development

# Python path para importaciones
PYTHONPATH=/app:/app/mi_app_estudio

# Desactivar funciones que usan mucha memoria
DEBUG=False

# Configuración específica para evitar builds pesados
SKIP_BUILD_OPTIMIZATION=true
DISABLE_TELEMETRY=1
